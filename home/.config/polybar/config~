[colors]
background = ${xrdb:*.background}
;background = #222
background-alt = ${xrdb:*.color8}

foreground = ${xrdb:*.foreground}
;foreground = #dfdfdf
foreground-alt = ${xrdb:*.color7}

;primary = #ffb52a
primary = ${xrdb:*.color1}
;secondary = #e60053
secondary = ${xrdb:*.color1}
;alert = #bd2c40
alert = ${xrdb:*.color1}

[bar/AlexsCoolBarXD]
monitor = ${env:MONITOR:}
width = 100%
height = 20
;bottom = true
;offset-x = 1%
;offset-y = 1%
;radius = 6
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #000000ff

padding-left = 3
padding-right = 3

module-margin-left = 2
module-margin-right = 2

font-0 = Futura lt:size=9:;0
font-1 = Font Awesome 5 Free:style=Regular:pixelsize=9;0
font-2 = Font Awesome 5 Free:style=Solid:pixelsize=9;0
font-3 = Font Awesome 5 Brands:pixelsize=9;0

modules-left = i3
modules-center = xwindow mpd
modules-right = filesystem pulseaudio xkeyboard memory cpu eth temperature date powermenu

tray-position = right
tray-padding = 2
tray-background = ${xrdb:*.color5}

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{A1:xdg-open /:}%{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%%{A}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
enable-click = true
enable-scroll = true
strip-wsnumbers = true
fuzzy-match = true

ws-icon-0 = Firefox;
ws-icon-1 = Term;
ws-icon-2 = Misc;…
ws-icon-3 = Social;
ws-icon-4 = Gaming;
ws-icon-5 = Music;
ws-icon-default = 

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = ${colors.foreground}
label-mode-background = ${colors.alert}

label-focused = %icon% %name%
label-focused-background = ${xrdb:*.color2}
label-focused-underline = ${xrdb:*.color10}
label-focused-foreground = ${colors.background}
label-focused-padding = 2

label-unfocused = %icon% %index%
label-unfocused-padding = 2

label-visible = %icon% %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
label-visible-foreground = ${colors.background-alt}

label-urgent = %icon% %name%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.alert}
label-urgent-padding = 2



[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

;label-song-maxlen = 25
;label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${xrdb:*.color2}
label = %percentage:3%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${xrdb:*.color3}
label = %percentage_used%%

[module/date]
type = internal/date
interval = 1

date = " %a"
date-alt = " %Y-%m-%d"

time = %H:%M:%S
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${xrdb:*.color4}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume =  %{A3:pavucontrol:}<ramp-volume> <label-volume>%{A}
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}

label-muted = " 0%"
label-muted-foreground = ${colors.foreground-alt}

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
bar-volume-empty-foreground = ${colors.foreground-alt}


